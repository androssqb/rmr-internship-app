<resources>

    <style name="Widget.InternshipApp.TextInputLayout.FilledBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxStrokeWidth">@dimen/text_input_stroke_width_dp_2</item>
        <item name="boxStrokeColor">@color/input_text_indicator_color</item>
        <item name="hintTextAppearance">@style/TextAppearance.InternshipApp.Body1</item>
        <item name="hintEnabled">false</item>
        <item name="errorEnabled">false</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.InternshipApp.TextInputEditText.FilledBox</item>
    </style>

    <style name="Widget.InternshipApp.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="backgroundTint">@color/button_state_colors</item>
        <item name="android:textColor">@color/button_text_state_colors</item>
        <item name="android:textAppearance">@style/TextAppearance.InternshipApp.Button</item>
    </style>

    <style name="Widget.InternshipApp.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAppearance">@style/TextAppearance.InternshipApp.Button.TextButton</item>
        <item name="rippleColor">?colorPrimary</item>
    </style>

    <style name="Widget.InternshipApp.Button.TextButton.Icon" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:insetTop">10dp</item>
        <item name="android:insetBottom">10dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textAppearance">@style/TextAppearance.InternshipApp.Button.TextButton</item>
        <item name="rippleColor">?colorPrimary</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.InternshipApp.Button.TextButton.Icon</item>
    </style>

    <style name="Widget.InternshipApp.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.InternshipApp.Toolbar</item>
    </style>

    <style name="Widget.InternshipApp.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/ShapeAppearance.InternshipApp.MediumComponent</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="Widget.InternshipApp.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:layout_marginBottom">120dp</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.InternshipApp.Snackbar</item>
    </style>

    <style name="TextAppearance.InternshipApp.Button" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/ibmplex_sans</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_sp_16</item>
    </style>

    <style name="TextAppearance.InternshipApp.Button.TextButton" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/ibmplex_sans</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textSize">@dimen/text_sp_16</item>
    </style>

    <style name="TextAppearance.InternshipApp.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:fontFamily">@font/ibmplex_sans</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_sp_36</item>
    </style>

    <style name="TextAppearance.InternshipApp.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/ibmplex_sans</item>
        <item name="android:textColor">@color/grayish_blue</item>
        <item name="android:textSize">@dimen/text_sp_16</item>
    </style>

    <style name="TextAppearance.InternshipApp.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/ibmplex_sans</item>
        <item name="android:textSize">@dimen/text_sp_16</item>
    </style>

    <style name="TextAppearance.InternshipApp.Body1.Black" parent="TextAppearance.InternshipApp.Body1">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ShapeAppearance.InternshipApp.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/button_corner_radius_dp_14</item>
    </style>

    <style name="ShapeAppearance.InternshipApp.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/card_corner_radius_dp_24</item>
    </style>

</resources>
