<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="snackbarStyle">@style/Widget.InternshipApp.Snackbar</item>
        <item name="materialButtonStyle">@style/Widget.InternshipApp.Button</item>
        <item name="textInputStyle">@style/Widget.InternshipApp.TextInputLayout.FilledBox</item>
        <item name="borderlessButtonStyle">@style/Widget.InternshipApp.Button.TextButton</item>
        <item name="appBarLayoutStyle">@style/Widget.InternshipApp.Toolbar</item>
        <item name="toolbarStyle">@style/Widget.InternshipApp.Toolbar</item>
        <item name="materialCardViewStyle">@style/Widget.InternshipApp.CardView</item>
        <item name="textAppearanceHeadline1">@style/TextAppearance.InternshipApp.Headline1</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.InternshipApp.Headline6</item>
        <item name="textAppearanceBody1">@style/TextAppearance.InternshipApp.Body1</item>
        <item name="materialCalendarTheme">@style/ThemeOverlay.InternshipApp.DatePicker</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.InternshipApp.SmallComponent</item>
    </style>

    <style name="ThemeOverlay.InternshipApp.TextInputEditText.FilledBox" parent="@style/ThemeOverlay.MaterialComponents.TextInputEditText.FilledBox">
        <item name="colorPrimary">@color/light_grayish_blue</item>
        <item name="colorControlActivated">@color/grayish_blue</item>
    </style>

    <style name="ThemeOverlay.InternshipApp.DatePicker" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorOnSurface">@color/black</item>
    </style>

    <style name="ThemeOverlay.InternshipApp.Toolbar" parent="">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <style name="ThemeOverlay.InternshipApp.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="colorOnSurface">@color/vivid_red</item>
    </style>

    <style name="ThemeOverlay.InternshipApp.Button.TextButton.Icon" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="colorPrimary">@color/grayish_blue</item>
    </style>

</resources>
