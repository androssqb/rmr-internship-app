<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/login_fragment">

    <fragment
        android:id="@+id/login_fragment"
        android:name="com.redmadrobot.app.ui.login.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_login_fragment_to_sign_up_first_fragment"
            app:destination="@id/sign_up_first_fragment" />
        <action
            android:id="@+id/action_login_fragment_to_sign_in_fragment"
            app:destination="@id/sign_in_fragment" />
        <action
            android:id="@+id/action_login_fragment_to_bottom_nav_fragment"
            app:destination="@id/bottom_nav_fragment"
            app:popUpTo="@id/login_fragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/sign_in_fragment"
        android:name="com.redmadrobot.app.ui.signin.SignInFragment"
        android:label="SignInFragment"
        tools:layout="@layout/fragment_sign_in">
        <action
            android:id="@+id/action_sign_in_fragment_to_done_fragment"
            app:destination="@id/done_fragment"
            app:popUpTo="@id/login_fragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_sign_in_fragment_to_sign_up_first_fragment"
            app:destination="@id/sign_up_first_fragment"
            app:popUpTo="@id/sign_in_fragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/sign_up_first_fragment"
        android:name="com.redmadrobot.app.ui.signupfirst.SignUpFirstFragment"
        android:label="SignUpFirstFragment"
        tools:layout="@layout/fragment_sign_up_first">
        <action
            android:id="@+id/action_sign_up_first_fragment_to_sign_up_second_fragment"
            app:destination="@id/sign_up_second_fragment" />
        <action
            android:id="@+id/action_sign_up_first_fragment_to_sign_in_fragment"
            app:destination="@id/sign_in_fragment"
            app:popUpTo="@id/sign_up_first_fragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/sign_up_second_fragment"
        android:name="com.redmadrobot.app.ui.signupsecond.SignUpSecondFragment"
        android:label="SignUpSecondFragment"
        tools:layout="@layout/fragment_sign_up_second">
        <action
            android:id="@+id/action_sign_up_second_fragment_to_done_fragment"
            app:destination="@id/done_fragment"
            app:popUpTo="@id/login_fragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="email"
            app:argType="string" />
        <argument
            android:name="password"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/done_fragment"
        android:name="com.redmadrobot.app.ui.done.DoneFragment"
        android:label="DoneFragment"
        tools:layout="@layout/fragment_done">
        <action
            android:id="@+id/action_done_fragment_to_bottom_nav_fragment"
            app:destination="@id/bottom_nav_fragment"
            app:popUpTo="@id/done_fragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/bottom_nav_fragment"
        android:name="com.redmadrobot.app.ui.bottomnav.BottomNavFragment"
        android:label="BottomNavFragment"
        tools:layout="@layout/fragment_bottom_nav">
        <action
            android:id="@+id/action_bottom_nav_fragment_to_login_fragment"
            app:destination="@id/login_fragment"
            app:popUpTo="@id/bottom_nav_fragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_bottom_nav_fragment_to_search_fragment"
            app:destination="@id/search_fragment" />
    </fragment>
    <fragment
        android:id="@+id/search_fragment"
        android:name="com.redmadrobot.app.ui.search.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search" />

</navigation>
